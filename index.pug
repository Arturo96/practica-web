- 
    let items = ['Quienes Somos', 'Productos', 'Servicios', 'Contacto'],
        productos = ['Kaspersky', 'ESET', 'BitDefender', 'Sophos', 'Fortinet']


<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(rel="stylesheet", href="style.css")
        link(rel="shortcut icon", href="img/top-logo.png", type="image/x-icon")
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/bxslider/4.2.12/jquery.bxslider.css">
  

        title Práctica web
    body
        header
            nav.navigation
                .logo
                    a(href="#")
                        img(src="img/it_header.png", alt="IT & Security Consultores Ltda")
                ul.menu
                    each item in items
                        li.menu-item
                            a.menu-link(href="#")= item
                            if item == "Productos"
                                ul(class="menu submenu")
                                    each producto in productos
                                        li.menu-item
                                            a.menu-link(href="#")= producto
        main
            .bxslider
                   div: img(src="img/slides/it.png")
                   div: img(src="img/slides/it.png")

            section.cards
                article.card
                    h2 Consultoría
                    .thumb
                        img(src="img/consultoria.jpg", alt="Imagen de consultoría")
                    p Asesoría experta para las necesidades empresariales de seguridad informática.
                article.card
                    h2 Licenciamiento de Software
                    img(src="img/licenciamiento.jpg", alt="Imagen de Licenciamiento de Software")
                    p Legalización de software. Sistemas Operativos, ofimática, seguridad.
                article.card
                    h2 Soporte técnico
                    img(src="img/soporte.jpg", alt="Soporte técnico")
                    p Contamos con personal idóneo y  altamente capacitado.
            section.location
                h2.location-title Ubicación
                .location-container
                    .mapa
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3356.8463663646244!2d-75.6028026856839!3d6.231619995489122!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e442994538f88bd%3A0xb6cbf2c942386f6a!2sCra.+80+%2330-2+a+30-96%2C+Medell%C3%ADn%2C+Antioquia!5e1!3m2!1ses-419!2sco!4v1562258244000!5m2!1ses-419!2sco" width="600" height="250" frameborder="0" allowfullscreen></iframe>
